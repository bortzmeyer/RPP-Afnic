{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "An entity (can be a contact, a registrar, etc). The idea is to stay close from JScontact (RFC 9553)",
    "title": "Entity",
    "type": "object",
    "properties": {
	"@type": {
	    "type": "string",
	    "const": "Card"
	},
	"name": {
	    "type": "object",
	    "properties": {
		"components": {
		    "type": "array",
		    "items": {
			"properties": {
			    "kind": {
				"type": "string",
				"enum": ["given", "surname"]
			    },
			    "value": {
				"type": "string"
			    }			
			}
		    }
		}
	    }	
	}
    },
    "required": ["@type", "name"]
}
	
    

